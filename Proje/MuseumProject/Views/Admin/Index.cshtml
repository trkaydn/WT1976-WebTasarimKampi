@model MuseumProject.Models.IndexViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}
<br />
<br />
<br />
<br />
<br />
<div class="container">

    <a class="btn btn-dark" style="color:white;" href="@Url.Action("AddCollection","Admin")">Yeni İçerik Ekle</a><h4 style="text-align:center">Tüm İçerikler</h4><br />


    @if (TempData["Collection"] != null)
    {
        <div class="alert alert-secondary"><button class="close" data-dismiss="alert" style="height:auto;color:darkred">×</button><h4 style="color:darkblue">@TempData["Collection"]</h4></div>
    }
    <div class="table-responsive">
        <table class="table table-hover table-active">
            <thead class="bg-light">
                <tr>
                    <th>#</th>
                    <th>Adı</th>
                    <th>Kategori</th>
                    <th>Açıklama</th>
                    <th>Sil</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Collection)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td>@item.Name</td>
                        @foreach (var ctg in Model.Category)
                        {
                            if (ctg.Id == item.CategoryId)
                            {
                                <td>@ctg.Name</td>

                            }
                        }
                        <td>@item.Description</td>
                        <td><a class="btn btn-danger" href="/Admin/DeleteCollection/@item.Id">X</a></td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
